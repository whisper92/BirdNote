<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="popmenuanim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="seekBarHorizontal" parent="@android:style/Widget.SeekBar">
        <item name="android:minHeight">5.0dip</item>
        <item name="android:maxHeight">5.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@drawable/tool_slide</item>
        <item name="android:progressDrawable">@drawable/seekbar_drawable00</item>
        <item name="android:thumbOffset">10.0dip</item>
    </style>

    <style name="seekBarEraserHorizontal" parent="@android:style/Widget.SeekBar">
        <item name="android:minHeight">5.0dip</item>
        <item name="android:maxHeight">5.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@drawable/tool_slide</item>
        <item name="android:progressDrawable">@drawable/seekbar_drawable00</item>
        <item name="android:thumbOffset">10.0dip</item>
    </style>

    <style name="show_note_activity" parent="android:style/Theme.Holo.Light">
        <item name="android:actionOverflowButtonStyle">@null</item>
        <item name="android:actionBarStyle">@style/show_note_actionbar</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
    </style>

    <style name="edit_note_activity" parent="android:style/Theme.Holo.Light">
        <item name="android:actionOverflowButtonStyle">@null</item>
        <item name="android:actionBarStyle">@style/edit_note_actionbar</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
    </style>

    <style name="show_note_actionbar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/th01_actionbar_green</item>
        <item name="android:titleTextStyle">@style/ShowNotesActionBarTitleText</item>
    </style>

    <style name="edit_note_actionbar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/th01_actionbar_white</item>
        <item name="android:titleTextStyle">@style/ShowNotesActionBarTitleText</item>
    </style>

    <style name="ShowNotesActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_show_title_text</item>
    </style>

</resources>