<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_popmenu_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_alert_dialog_full_bg"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg"
        android:orientation="vertical"
        android:padding="20dp" >

        <Button
            android:id="@+id/id_pop_mark_bg_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/mark_bg_blue"
            android:padding="10dp"
            android:textColor="@color/color_show_item" />

        <Button
            android:id="@+id/id_pop_mark_bg_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/mark_bg_green"
            android:padding="10dp"
            android:textColor="@color/color_show_item" />

        <Button
            android:id="@+id/id_pop_mark_bg_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/mark_bg_yellow"
            android:padding="10dp"
            android:textColor="@color/color_show_item" />
        
        <Button
            android:id="@+id/id_pop_mark_bg_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/mark_bg_red"
            android:padding="10dp"
            android:textColor="@color/color_show_item" />
    </LinearLayout>

</LinearLayout>