<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/mark_bg_red"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/mark_bg_red" />

    <ImageView
        android:id="@+id/mark_bg_yellow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/mark_bg_yellow" />

    <ImageView
        android:id="@+id/mark_bg_green"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/mark_bg_green" />

    <ImageView
        android:id="@+id/mark_bg_blue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/mark_bg_blue" />

</LinearLayout>