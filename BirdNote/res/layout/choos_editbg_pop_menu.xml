<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_popmenu_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_alert_dialog_full_bg"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_popmenu_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="10dp" >

        <GridView
            android:id="@+id/id_edit_choos_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_show_gridview_margin"
            android:animateLayoutChanges="true"
            android:background="@drawable/show_note_bg"
            android:columnWidth="90dp"
            android:horizontalSpacing="@dimen/dimen_show_note_item_space"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/dimen_show_note_item_space" >
        </GridView>
    </LinearLayout>

</LinearLayout>