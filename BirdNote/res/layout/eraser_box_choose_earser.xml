<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tool_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_pop_pen_title_height"
        android:layout_marginLeft="@dimen/dimen_pop_pen_title_marginleft"
        android:gravity="center_vertical"
        android:text="@string/pop_eraser_title"
        android:textColor="#ffffff"
        android:textSize="@dimen/dimen_pop_pen_title_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_pop_pen_title_marginleft" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_pop_pen_item_margin_top"
            android:background="@drawable/tool_color"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <SeekBar
                android:id="@+id/id_choose_eraser_seekbar"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:progressDrawable = "@drawable/eraser_seekbar_drawable"
                android:thumb="@drawable/tool_slide"
                android:max="100" 
                />

            <com.bird.note.customer.CleanCircle
                android:id="@+id/id_choose_eraser_circle"
                android:background="@drawable/tool_circle"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_pop_pen_item_margin_top" >

            <TextView
                android:id="@+id/id_choose_eraser_clean_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/pop_eraser_clear_all"
                android:background="@drawable/eraser_clean_all"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>