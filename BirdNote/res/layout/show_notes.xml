<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_bar" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_show_titile_height"
            android:layout_marginLeft="@dimen/dimen_show_titile_text_margin_left"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/color_show_title_text"
            android:textSize="@dimen/dimen_show_titile_text_size" />

        <ImageView
            android:id="@+id/id_show_title_new_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_show_title_new_text"
            android:background="@drawable/new_pen_bg"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_new_pen" />

        <ImageView
            android:id="@+id/id_show_title_new_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_show_titile_text_margin_right"
            android:background="@drawable/new_pen_bg"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_new_text" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/note_bg"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/id_show_gv"
            android:layout_margin="@dimen/dimen_show_gridview_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchMode="columnWidth"
            android:columnWidth="90dp"
            android:horizontalSpacing="@dimen/dimen_show_note_item_space"
            android:verticalSpacing="@dimen/dimen_show_note_item_space"
            android:numColumns="3" >
        </GridView>
    </LinearLayout>

</LinearLayout>