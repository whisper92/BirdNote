<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_note_item_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/id_note_item_cover_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/id_note_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="15px"
        android:text="@string/app_name"
        android:textColor="@color/color_show_item"
        android:textSize="@dimen/dimen_show_gridview_title_textsize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_show_gridview_margin"
        android:layout_marginRight="@dimen/dimen_show_gridview_margin"
        android:background="@drawable/datebackground" >

        <TextView
            android:id="@+id/id_note_item_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_show_item"
            android:textSize="@dimen/dimen_show_gridview_date_textsize" />

        <ImageView
            android:id="@+id/id_note_item_cover_fav"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dimen_show_star_margin"
            android:contentDescription="@string/app_name"
            android:src="@drawable/favorite_sel" />
    </RelativeLayout>

</RelativeLayout>