<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_note_item_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/id_note_item_cover_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/th01_cover_00"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/id_note_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/color_show_item"
        android:textSize="@dimen/dimen_show_titile_text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_show_gridview_datebg_height"
        android:background="@drawable/datebackground"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp" >

        <TextView
            android:id="@+id/id_note_item_date_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_show_item"
            android:textSize="@dimen/dimen_show_gridview_date_textsize" />

        <ImageView
            android:id="@+id/id_note_item_cover_fav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/favorite_sel"
            android:contentDescription="@string/app_name"/>
    </RelativeLayout>

</RelativeLayout>